    script.
      // Show the code for each preview
      String.prototype.entities = function() {
        return this.toString().replace(
          /[\u00A0-\u9999<>\&]/gim,
          function(i) { return '&#'+i.charCodeAt(0)+';'; }
          );
        }
      var sectionsCollection = document.getElementsByTagName("section");
      // http://stackoverflow.com/a/222847/938236
      var sections = [].slice.call(sectionsCollection);
      sections.forEach(function(section, index){
        var render = section.getElementsByClassName('render')[0];
        if (render) {
          section.innerHTML += "<pre></pre>";
          var pre = section.getElementsByTagName("pre")[0];
          var html = render.innerHTML;
          pre.innerHTML = html.trim().entities();
          }
        });